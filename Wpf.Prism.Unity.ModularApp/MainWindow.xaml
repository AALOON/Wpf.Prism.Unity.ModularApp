<Window x:Class="Wpf.Prism.Unity.ModularApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.Prism.Unity.ModularApp"
        xmlns:regions="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <StackPanel Orientation="Vertical">
        <ItemsControl Name="ModuleA" regions:RegionManager.RegionName="ModuleA" />
        <ItemsControl Name="ModuleB" regions:RegionManager.RegionName="ModuleB" />
        <ItemsControl Name="ModuleC" regions:RegionManager.RegionName="ModuleC" />
    </StackPanel>
</Window>
